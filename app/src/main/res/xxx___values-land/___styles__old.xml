<resources>
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item> <!-- Verde -->
        <item name="colorPrimaryDark">@color/primary</item>

        <item name="colorAccent">@color/accent</item> <!-- Amarillo -->
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@color/accent</item>
        <!-- actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="actionMenuTextColor">@color/accent</item>

        <!-- Applies to views in their normal state. -->
        <item name="colorControlNormal">@color/primary</item>
        <!-- Applies to views in their activated state (i.e checked or switches) -->
        <item name="colorControlActivated">@color/accent</item>
        <!-- Applied to framework control highlights (i.e ripples or list selectors) -->
        <item name="colorControlHighlight">@color/primary</item>

    </style>

    <style name="titulo_tutorial" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">40sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="texto_tutorial" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="texto_error">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="titulo" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="graficas">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">bottom</item>
    </style>
    <style name="precio_hoy">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:src">@drawable/rectangulo</item>
    </style>
    <style name="precio_hace_una_semana">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/purple</item>
        <item name="android:src">@drawable/rectangulo</item>
    </style>
    <style name="precio_hace_un_aÃ±o">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/DodgerBlue</item>
        <item name="android:src">@drawable/rectangulo</item>
    </style>
    <style name="leyenda" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:typeface">monospace</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">7sp</item>
    </style>
    <style name="horas" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/LightSlateGray</item>
        <item name="android:typeface">monospace</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">11sp</item>
    </style>

</resources>
