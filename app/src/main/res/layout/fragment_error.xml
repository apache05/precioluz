<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.ruben.precioluz.ErrorFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/texto_error"
            style="@style/texto_error"/>
        <ImageView
            android:src="@drawable/flecha_izquierda"
            style="@style/felchita_izquierda"
            android:layout_centerVertical="true"
            android:id="@+id/flechita_izquierda_error"/>
        <ImageView
            android:src="@drawable/flecha_derecha"
            style="@style/felchita_derecha"
            android:layout_centerVertical="true"
            android:id="@+id/flechita_derecha_error"/>
    </RelativeLayout>
</FrameLayout>
