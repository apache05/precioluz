<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

     <TextView
        android:contentDescription="@string/contentdescription_flecha"
        android:id="@+id/app_name"
        android:text="@string/app_name"
        style="@style/titulo_tutorial"/>
    <ImageView
        android:contentDescription="@string/contentdescription_flecha"
        android:src="@drawable/flecha_derecha"
        android:layout_below="@+id/app_name"
        style="@style/flechita_derecha"
        />

    <ScrollView android:id="@+id/ScrlView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/app_name"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/texto_tutorial"
            android:text="@string/texto_tutorial"
            style="@style/texto_tutorial"
            />
    </ScrollView>

</RelativeLayout>