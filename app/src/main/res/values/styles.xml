<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"></style>
    <style name="felchita_izquierda">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="felchita_derecha">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="titulo_tutorial" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">40dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="titulo" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">40dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="precio_hoy">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">1dp</item>
    </style>
    <style name="precio_hace_una_semana">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/MidnightBlue</item>
    </style>
    <style name="precio_hace_un_aÃ±o">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/SkyBlue</item>
    </style>
    <style name="leyenda" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:typeface">monospace</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>

    </style>
    <style name="horas" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/LightSlateGray</item>
        <item name="android:typeface">monospace</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="texto_tutorial" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">80dp</item>
        <item name="android:paddingRight">80dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">17dp</item>
    </style>
    <style name="texto_error">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="graficas">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">bottom</item>
    </style>
</resources>
