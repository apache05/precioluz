<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColor">@color/gris</item>
        <item name="android:editTextColor">@color/gris</item>
        <item name="android:windowFullscreen">false</item>


        <item name="colorAccent">@color/accent</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="DialogTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorBackground">@color/primary</item>
    </style>

    <style name="Dialog_Header_Background">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item> <!-- Verde -->
        <item name="colorPrimaryDark">@color/primary_dark</item>

        <item name="colorAccent">@color/accent</item> <!-- Amarillo -->
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@color/accent</item>
        <!-- actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="actionMenuTextColor">@color/white</item>

        <!-- Applies to views in their normal state. -->
        <item name="colorControlNormal">@color/primary</item>
        <!-- Applies to views in their activated state (i.e checked or switches) -->
        <item name="colorControlActivated">@color/accent</item>
        <!-- Applied to framework control highlights (i.e ripples or list selectors) -->
        <item name="colorControlHighlight">@color/primary</item>

    </style>



</resources>